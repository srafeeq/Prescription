@model PrescriptionApp.Models.Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<h2>Delete Prescription</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this prescription?</h4>
    <p><strong>Medication:</strong> @Model.MedicationName</p>
    <p><strong>Status:</strong> @Model.FillStatus</p>
    <p><strong>Cost:</strong> @Model.Cost</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PrescriptionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

